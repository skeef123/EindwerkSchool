                    Height="48" 
                    Background="#FFFF6060"
                    FontSize="14" 
                    Name="toevoegen" 
                    Foreground="White" 
                    BorderBrush="{x:Null}" 
                    Click="toevoegen_Click"
                    Cursor="Hand"
                    FontFamily="Segoe UI Historic"
                    Style="{StaticResource MenuButtonTheme}"
                    />
