                     Width="160" 
                     CaretBrush="#FFFF6060" 
                     BorderBrush="#FFFF6060"
                     Name="inputBusnummerAdres"
                     Height="22"
                     Margin="370,-23,1,1"
                     HorizontalAlignment="Left" 
                     Background="White"
                     FontFamily="Segoe UI Historic" 
