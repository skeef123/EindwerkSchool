        <StackPanel Grid.Row="0" 
                    Background="#173F5F">

            <TextBlock Text="AdresBH"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="24"
                       Margin="50,20,0,0" 
                       FontFamily="Segoe UI Black"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="#173F5F">
            <Button Content="Adres zoeken" 
                    Height="48" 
                    
                    FontSize="14" 
                    Name="home"  
                    Foreground="White" 
                    BorderBrush="{x:Null}" 
                    Click="Button_Click"
                    Background="#FF173F5F"
                    Width="203" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left" 
                    Cursor="Hand" 
                    FontFamily="Segoe UI Historic"
                    Style="{StaticResource MenuButtonTheme}"
                    />
            <Button Content="Adres Updaten"
                    Height="48" 
                    FontSize="14" 
                    Name="updaten" 
                    Foreground="White" 
                    BorderBrush="{x:Null}" 
