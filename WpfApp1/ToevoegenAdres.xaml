                       TextWrapping="Wrap" 
                       VerticalAlignment="Top" 
                       Width="150" 
                       FontFamily="Segoe UI Historic"
                       FontSize="14"/>

                <TextBlock Grid.Column="1" 
                       HorizontalAlignment="Left" 
                       Margin="370,-18,0,0" 
                       Grid.Row="1" 
                       Text="Bus nummer :" 
                       TextWrapping="Wrap" 
                       VerticalAlignment="Top" 
                       Width="100" 
                       FontFamily="Segoe UI Historic"
