                     Width="200" 
                     CaretBrush="#FFFF6060" 
                     BorderBrush="#FFFF6060"
                     Name="inputStraatnaamAdres"
                     Height="22"
                     Margin="40,1,1,1"
                     HorizontalAlignment="Left" 
                     Background="White"
                     FontFamily="Segoe UI Historic" 
                     FontSize="14"/>

